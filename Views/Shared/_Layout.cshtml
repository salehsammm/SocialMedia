<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SocialMedia</title>
    <link rel="stylesheet" href="~/SocialMedia.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/images/favicon.png" rel="icon" type="image/svg" />
    <link href="~/css/tailwind.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/style.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>

    <div id="wrapper">
        @* Topbar *@
        <header class="z-[100] h-[--m-top] fixed top-0 left-0 w-full flex items-center bg-white/80 sky-50 backdrop-blur-xl border-b border-slate-200">
        <div class="2xl:w-[--w-side] lg:w-[--w-side-sm]">
            <div class ="flex items-center gap-1">
                <button uk-toggle="target: #site__sidebar ; cls :!-translate-x-0"
                        class="flex items-center justify-center w-8 h-8 text-xl rounded-full hover:bg-gray-100 xl:hidden group">
                    <ion-icon name="menu-outline" class="text-2xl group-aria-expanded:hidden"></ion-icon>
                    <ion-icon name="close-outline" class="hidden text-2xl group-aria-expanded:block"></ion-icon>
                </button>

                <div id="logo" class="flex items-center">
                    <a class="flex items-center">
                        <img src="~/"/>
                    </a>
                </div>
            </div>
            <div>
                @* search *@
                @* notif icon *@
                @* prof icon *@
            </div>
        </div>



        </header>

        @* Sidebar (left) *@
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>
    <script src="~/js/simplebar.js" asp-append-version="true"></script>
    <script src="~/js/uikit.min.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
